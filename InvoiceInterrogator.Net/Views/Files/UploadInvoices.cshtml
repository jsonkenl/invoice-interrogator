@model FileUploadViewModel

<div class="row align-items-center">
    <div class="col">
    </div>
    <div class="col">
        <div id="uploadCard" class="card text-white border-primary mb-3">
            <div class="card-header">
                Select File to Upload
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="UploadInvoices">
                    <div id="uploadForm" class="form-group">
                        <input asp-for="XmlFile" type="file" class="form-control-file" />
                        <small id="fileHelp" class="form-text">Export .xml file from DocVue and upload here</small>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <input type="submit" value="Upload" class="btn btn-outline-primary btn-block" />
                            </div>
                            <div class="col">
                                <a class="btn btn-outline-danger btn-block" asp-controller="Home" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col">
    </div>
</div>
