@model AccountEditViewModel

@{
    var acct = ViewData["Account"] as Account;
}

<div id="accountEditCard" class="row justify-content-center">
    <div class="card border-primary mb-3 col-8 col-md-6 col-lg-4 col-xl-3">
        <div class="card-header">
            <h4 class="card-title">Edit Account</h4>
            @Html.ValidationSummary()
        </div>
        @if (acct != null)
        {
            <form method="post" asp-controller="Accounts" asp-action="EditAccount" asp-route-id="@acct.AccountId" asp-antiforgery="true">
                <div class="card-body">
                    <div class="form-group">
                        <label class="control-label" asp-for="AccountCode"></label>
                        <div>
                            <input class="form-control" value="@acct.AccountCode" placeholder="@acct.AccountCode" asp-for="AccountCode" />
                            <span asp-validation-for="AccountCode"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Name"></label>
                        <div>
                            <input class="form-control" value="@acct.Name" placeholder="@acct.Name" asp-for="Name" />
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Type"></label>
                        <div>
                            <input class="form-control" value="@acct.Type" placeholder="@acct.Type" asp-for="Type" />
                            <span asp-validation-for="Type"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="Edit" class="btn btn-outline-primary" />
                            <a class="btn btn-outline-danger" asp-controller="Accounts" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</div>